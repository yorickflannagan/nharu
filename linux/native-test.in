SHELL           = /bin/sh
FILES          := $(shell find . -name '*.c')
CC              = _CC_
CFLAGS          = _CFLAGS_
LDFLAGS         = _LDFLAGS_
OPENSSL_INCLUDE = _OPENSSL_INCLUDE_
IDN_INCLUDE     = _IDN_INCLUDE_
OPENSSL_LIB     = _OPENSSL_LIB_
IDN_LIB         = _IDN_LIB_
DLA_LIB         = _DLA_LIB_
IMP_LIBS        = _IMP_LIBS_
ICONV_LIB       = _ICONV_LIB_

TARGET_NAME   = ntest-app
INCLUDES      = -I. -I../include -I../pkcs11 -I$(OPENSSL_INCLUDE) -I$(IDN_INCLUDE)
OBJ_FILES     = $(FILES:.c=.o)
VPATH         = .
LDLIBS        = -L../src -L$(OPENSSL_LIB) -L$(IDN_LIB) $(ICONV_LIB) -L$(DLA_LIB)


%.o: %.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

$(TARGET_NAME): $(OBJ_FILES)
	$(CC) $(LDFLAGS) $(LDLIBS) $(OBJ_FILES) -o $@ $(IMP_LIBS)

.PHONY: clean
clean:
	@find . -type f -regex ".*\.\(so\|o\|a\|i\|d\|s\)" -exec rm -f {} \;
	@rm -f $(TARGET_NAME)

files.d: $(FILES)
	cat /dev/null > files.d;                      \
	for i in $(FILES); do                         \
		$(CC) -MM $$i $(INCLUDES) >> files.d; \
	done;                                         \
	touch -m ./files.d


include ./files.d


