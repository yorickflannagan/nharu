#!/bin/bash
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do
  DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
CUR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
VER=$1
if [ -z "$VER" ]; then
	printf "%s\n" "Version argument must not be null"
	exit 1
fi
VERSION="$VER"
printf "const char *NHARU_VERSION = \"%s\";\n" "$VERSION">"$CUR/native/version.c"
printf "const char *NHARU_getVersion() { return NHARU_VERSION; }" >>"$CUR/native/version.c"

